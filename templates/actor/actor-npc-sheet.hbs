            <div class="skill-controls">
              <a class="skill-roll" data-skill="mobility"><i class="fas fa-dice-d20"></i></a>
            </div>
          </li>

          <li class="skill flexrow">
            <div class="skill-name">{{system.skills.finesse.label}}</div>
            <div class="skill-die">
              <select name="system.skills.finesse.die">
                <option value="d4" {{#if (eq system.skills.finesse.die "d4")}}selected{{/if}}>d4</option>
                <option value="d6" {{#if (eq system.skills.finesse.die "d6")}}selected{{/if}}>d6</option>
                <option value="d8" {{#if (eq system.skills.finesse.die "d8")}}selected{{/if}}>d8</option>
                <option value="d10" {{#if (eq system.skills.finesse.die "d10")}}selected{{/if}}>d10</option>
                <option value="d12" {{#if (eq system.skills.finesse.die "d12")}}selected{{/if}}>d12</option>
              </select>
            </div>
