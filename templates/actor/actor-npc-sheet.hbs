                <option value="d6" {{#if (eq system.skills.resolve.die "d6")}}selected{{/if}}>d6</option>
                <option value="d8" {{#if (eq system.skills.resolve.die "d8")}}selected{{/if}}>d8</option>
                <option value="d10" {{#if (eq system.skills.resolve.die "d10")}}selected{{/if}}>d10</option>
                <option value="d12" {{#if (eq system.skills.resolve.die "d12")}}selected{{/if}}>d12</option>
              </select>
            </div>
            <div class="skill-attribute">{{system.skills.resolve.attribute}}</div>
            <div class="skill-controls">
              <a class="skill-roll" data-skill="resolve"><i class="fas fa-dice-d20"></i></a>
            </div>
          </li>

          <li class="skill flexrow">
