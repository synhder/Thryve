            <div class="skill-controls">
              <a class="skill-roll" data-skill="finesse"><i class="fas fa-dice-d20"></i></a>
            </div>
          </li>

          <li class="skill flexrow">
            <div class="skill-name">{{system.skills.deception.label}}</div>
            <div class="skill-die">
              <select name="system.skills.deception.die">
                <option value="d4" {{#if (eq system.skills.deception.die "d4")}}selected{{/if}}>d4</option>
                <option value="d6" {{#if (eq system.skills.deception.die "d6")}}selected{{/if}}>d6</option>
