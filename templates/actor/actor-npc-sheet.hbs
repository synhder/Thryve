          <li class="skill flexrow">
            <div class="skill-name">{{system.skills.systems.label}}</div>
            <div class="skill-die">
              <select name="system.skills.systems.die">
                <option value="d4" {{#if (eq system.skills.systems.die "d4")}}selected{{/if}}>d4</option>
                <option value="d6" {{#if (eq system.skills.systems.die "d6")}}selected{{/if}}>d6</option>
                <option value="d8" {{#if (eq system.skills.systems.die "d8")}}selected{{/if}}>d8</option>
