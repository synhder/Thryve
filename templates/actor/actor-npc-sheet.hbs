<form class="{{cssClass}} flexrow" autocomplete="off">

  {{!-- Left Sidebar --}}
  <aside class="sidebar">
    
    {{!-- NPC Portrait --}}
    <div class="profile">
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
    </div>

    {{!-- Attributes Section --}}
    <div class="attributes-sidebar">
      <h3>Attributes</h3>
      
      <div class="attribute-block">
        <label>Strength</label>
        <input type="text" name="system.attributes.strength.value" value="{{system.attributes.strength.value}}" data-dtype="Number"/>
        <span class="mod">Mod: +{{system.attributes.strength.mod}}</span>
      </div>

      <div class="attribute-block">
        <label>Agility</label>
        <input type="text" name="system.attributes.agility.value" value="{{system.attributes.agility.value}}" data-dtype="Number"/>
        <span class="mod">Mod: +{{system.attributes.agility.mod}}</span>
      </div>

      <div class="attribute-block">
        <label>Intellect</label>
        <input type="text" name="system.attributes.intellect.value" value="{{system.attributes.intellect.value}}" data-dtype="Number"/>
        <span class="mod">Mod: +{{system.attributes.intellect.mod}}</span>
      </div>

      <div class="attribute-block">
        <label>Charisma</label>
        <input type="text" name="system.attributes.charisma.value" value="{{system.attributes.charisma.value}}" data-dtype="Number"/>
        <span class="mod">Mod: +{{system.attributes.charisma.mod}}</span>
      </div>

      <div class="attribute-block">
        <label>Willpower</label>
        <input type="text" name="system.attributes.willpower.value" value="{{system.attributes.willpower.value}}" data-dtype="Number"/>
        <span class="mod">Mod: +{{system.attributes.willpower.mod}}</span>
      </div>
    </div>

  </aside>

  {{!-- Main Content Area --}}
  <section class="main-content flexcol">
    
    {{!-- Header --}}
    <header class="sheet-header">
      <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}" placeholder="NPC Name"/>
      </h1>
      <div class="resources">
        <div class="resource">
          <label>Health</label>
          <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number"/>
          <span> / </span>
          <input type="text" name="system.health.max" value="{{system.health.max}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <label>Challenge Rating</label>
          <input type="text" name="system.cr" value="{{system.cr}}" data-dtype="Number"/>
        </div>
      </div>
    </header>

    {{!-- Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="item" data-tab="skills">Skills</a>
      <a class="item" data-tab="notes">Notes</a>
    </nav>

    {{!-- Tab Content --}}
    <div class="sheet-body">

      {{!-- Skills Tab --}}
      <div class="tab skills" data-group="primary" data-tab="skills">
        <h3>Skills</h3>
        <ol class="skills-list">
          <li class="skill-header flexrow">
            <div class="skill-name">Skill</div>
            <div class="skill-die">Die</div>
            <div class="skill-attribute">Attribute</div>
            <div class="skill-controls">Roll</div>
          </li>

          {{!-- All 8 skills (same as character sheet) --}}
          <li class="skill flexrow">
            <div class="skill-name">{{system.skills.force.label}}</div>
            <div class="skill-die">
              <select name="system.skills.force.die">
                <option value="d4" {{#if (eq system.skills.force.die "d4")}}selected{{/if}}>d4</option>
                <option value="d6" {{#if (eq system.skills.force.die "d6")}}selected{{/if}}>d6</option>
                <option value="d8" {{#if (eq system.skills.force.die "d8")}}selected{{/if}}>d8</option>
                <option value="d10" {{#if (eq system.skills.force.die "d10")}}selected{{/if}}>d10</option>
                <option value="d12" {{#if (eq system.skills.force.die "d12")}}selected{{/if}}>d12</option>
              </select>
            </div>
            <div class="skill-attribute">{{system.skills.force.attribute}}</div>
            <div class="skill-controls">
              <a class="skill-roll" data-skill="force"><i class="fas fa-dice-d20"></i></a>
            </div>
          </li>

          <li class="skill flexrow">
            <div class="skill-name">{{system.skills.influence.label}}</div>
            <div class="skill-die">
              <select name="system.skills.influence.die">
                <option value="d4" {{#if (eq system.skills.influence.die "d4")}}selected{{/if}}>d4</option>
                <option value="d6" {{#if (eq system.skills.influence.die "d6")}}selected{{/if}}>d6</option>
                <option value="d8" {{#if (eq system.skills.influence.die "d8")}}selected{{/if}}>d8</option>
                <option value="d10" {{#if (eq system.skills.influence.die "d10")}}selected{{/if}}>d10</option>
                <option value="d12" {{#if (eq system.skills.influence.die "d12")}}selected{{/if}}>d12</option>
              </select>
            </div>
            <div class="skill-attribute">{{system.skills.influence.attribute}}</div>
            <div class="skill-controls">
              <a class="skill-roll" data-skill="influence"><i class="fas fa-dice-d20"></i></a>
            </div>
          </li>

