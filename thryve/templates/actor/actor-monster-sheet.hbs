<form class="{{cssClass}} flexrow" autocomplete="off">

{{!-- Left Sidebar --}}
<aside class="sidebar">
  
  {{!-- Monster Portrait --}}
  <div class="profile">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}"/>
  </div>

  {{!-- Tier --}}
  <div class="tier-display">
    <h3>Tier</h3>
    <select name="system.tier" data-dtype="Number" style="width: 100%; font-size: 18px; padding: 5px;">
      <option value="0" {{#if (eq system.tier 0)}}selected{{/if}}>Tier 0 (Weak)</option>
      <option value="1" {{#if (eq system.tier 1)}}selected{{/if}}>Tier 1 (Common)</option>
      <option value="2" {{#if (eq system.tier 2)}}selected{{/if}}>Tier 2 (Veteran)</option>
      <option value="3" {{#if (eq system.tier 3)}}selected{{/if}}>Tier 3 (Elite)</option>
      <option value="4" {{#if (eq system.tier 4)}}selected{{/if}}>Tier 4 (Champion)</option>
      <option value="5" {{#if (eq system.tier 5)}}selected{{/if}}>Tier 5 (Legendary)</option>
    </select>
  </div>

  {{!-- Tags --}}
  <div class="tags-display">
    <h3>Tags</h3>
    <select name="system.tags" multiple size="6">
      <option value="Tank" {{#if (includes system.tags "Tank")}}selected{{/if}}>Tank</option>
      <option value="Assassin" {{#if (includes system.tags "Assassin")}}selected{{/if}}>Assassin</option>
      <option value="Brute" {{#if (includes system.tags "Brute")}}selected{{/if}}>Brute</option>
      <option value="Support" {{#if (includes system.tags "Support")}}selected{{/if}}>Support</option>
      <option value="Caster" {{#if (includes system.tags "Caster")}}selected{{/if}}>Caster</option>
      <option value="Swarm" {{#if (includes system.tags "Swarm")}}selected{{/if}}>Swarm</option>
      <option value="Elite" {{#if (includes system.tags "Elite")}}selected{{/if}}>Elite</option>
      <option value="Boss" {{#if (includes system.tags "Boss")}}selected{{/if}}>Boss</option>
      <option value="Flying" {{#if (includes system.tags "Flying")}}selected{{/if}}>Flying</option>
      <option value="Aquatic" {{#if (includes system.tags "Aquatic")}}selected{{/if}}>Aquatic</option>
    </select>
    <p class="hint">Hold Ctrl/Cmd to select multiple</p>
  </div>

  {{!-- Combat Stats --}}
  <div class="combat-stats">
    <h3>Combat Stats</h3>
    
    <div class="stat-block">
      <label>DV (Dodge)</label>
      <span class="stat-value">{{system.dv.value}}</span>
    </div>

    <div class="stat-block">
      <label>Movement</label>
      <input type="text" name="system.movement.value" value="{{system.movement.value}}" data-dtype="Number" style="width: 50px;"/>m
    </div>
  </div>

  {{!-- Resistances --}}
  <div class="resistances">
    <h3>Resistances</h3>
    
    <div class="resistance-block">
      <label>All Types</label>
      <span class="resistance-value">{{system.resistances.biological.value}}</span>
    </div>
  </div>

</aside>

  {{!-- Main Content Area --}}
  <section class="main-content flexcol">
    
    {{!-- Header --}}
    <header class="sheet-header">
      <h1 class="charname">
        <input name="name" type="text" value="{{actor.name}}" placeholder="Monster Name"/>
      </h1>
      
      {{!-- Magic Toggle --}}
      <div class="magic-toggle">
        <label>
          <input type="checkbox" name="system.usesMagic" {{#if system.usesMagic}}checked{{/if}}/>
          Uses Magic
        </label>
      </div>
      
    <div class="resources">
  <div class="resource">
    <label>Body</label>
    <input type="text" name="system.body.value" value="{{system.body.value}}" data-dtype="Number"/>
    <span> / </span>
    <span class="max-value">{{system.body.max}}</span>
  </div>
  <div class="resource">
    <label>Stability</label>
    <input type="text" name="system.stability.value" value="{{system.stability.value}}" data-dtype="Number"/>
    <span> / </span>
    <span class="max-value">{{system.stability.max}}</span>
  </div>
  {{#if system.usesMagic}}
  <div class="resource">
    <label>Humor</label>
    <input type="text" name="system.humor.value" value="{{system.humor.value}}" data-dtype="Number"/>
    <span> / </span>
    <span class="max-value">{{system.humor.max}}</span>
  </div>
  <button type="button" class="cast-spell-button">
    <i class="fas fa-magic"></i> Cast Spell
  </button>
  {{/if}}
  <button type="button" class="roll-attack-button">
    <i class="fas fa-crosshairs"></i> Attack (1d10+1d6)
  </button>
</div>

    {{!-- Tab Navigation --}}
    <nav class="sheet-tabs tabs" data-group="primary">
      <a class="item" data-tab="abilities">Abilities</a>
      <a class="item" data-tab="inventory">Inventory</a>
      <a class="item" data-tab="notes">Notes</a>
    </nav>

    {{!-- Tab Content --}}
    <div class="sheet-body">

      {{!-- Abilities Tab --}}
      <div class="tab abilities" data-group="primary" data-tab="abilities">
        <div class="form-group stacked">
          <label>Special Abilities</label>
          <textarea name="system.abilities" rows="15" placeholder="Describe monster's special abilities...">{{system.abilities}}</textarea>
        </div>
      </div>

      {{!-- Inventory Tab --}}
      <div class="tab inventory" data-group="primary" data-tab="inventory">
        
        {{!-- Weapons --}}
        <h3>Weapons</h3>
        <ol class="items-list">
          <li class="item-header flexrow">
            <div class="item-name">Name</div>
            <div class="item-prop">Attack Die</div>
            <div class="item-prop">Damage Die</div>
            <div class="item-prop">Range</div>
            <div class="item-controls">
              <a class="item-control item-create" data-type="weapon" title="Create Weapon">
                <i class="fas fa-plus"></i>
              </a>
            </div>
          </li>

          {{#each weapons as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-prop">{{item.system.attackDie}}</div>
            <div class="item-prop">{{item.system.damageDie}}</div>
            <div class="item-prop">{{item.system.range}}</div>
            <div class="item-controls">
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>

        {{!-- Items --}}
        <h3>Items</h3>
        <ol class="items-list">
          <li class="item-header flexrow">
            <div class="item-name">Name</div>
            <div class="item-prop">Qty</div>
            <div class="item-controls">
              <a class="item-control item-create" data-type="item" title="Create Item">
                <i class="fas fa-plus"></i>
              </a>
            </div>
          </li>

          {{#each items as |item id|}}
          <li class="item flexrow" data-item-id="{{item._id}}">
            <div class="item-name">
              <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
              <h4>{{item.name}}</h4>
            </div>
            <div class="item-prop">{{item.system.quantity}}</div>
            <div class="item-controls">
              <a class="item-control item-delete" title="Delete Item"><i class="fas fa-trash"></i></a>
            </div>
          </li>
          {{/each}}
        </ol>
      </div>

      {{!-- Notes Tab --}}
      <div class="tab notes" data-group="primary" data-tab="notes">
        <div class="form-group stacked">
          <label>GM Notes</label>
          <textarea name="system.notes" rows="15">{{system.notes}}</textarea>
        </div>
      </div>

    </div>
  </section>

</form>